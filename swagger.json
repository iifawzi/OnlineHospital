  "paths": {
    "/signup": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "The signup end point for users",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/signup"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "201 (Created)",
            "schema": {
              "$ref": "#/definitions/signupRes"
            }
          },
          "403": {
            "description": "403 (Username or phonenumber already exist)",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "400": {
            "description": "400 (Error with the inputs)",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/signin": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "The signin end point for users",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/signin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200 (successful)",
            "schema": {
              "$ref": "#/definitions/signinResponse"
            }
          },
          "401": {
            "description": "401 (Username or password is incorrect)",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "400": {
            "description": "400 (Error with the inputs)",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/updateFirebaseToken": {
      "patch": {
        "tags": [
          "Auth"
        ],
        "summary": "To update the token id for a specific user",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/updateToken"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200 (successful)",
            "schema": {
              "$ref": "#/definitions/updateTokenResponse"
            }
          },
          "401": {
            "description": "401 (Username or password is incorrect)",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "400": {
            "description": "400 (Error with the inputs)",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
